@model DateTimeTest.Models.ViewModels.PatientViewModel
<div class="modal modal-patient fade" role="dialog" id="details-patient-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Patient #@(Model.Patient.PatientID)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body form">
                <ul class="nav nav-pills">
                    <li class="nav-item active">
                        <a class="nav-link" data-toggle="pill" href="#demo">Demomgraphics </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#address">Address </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#contact">Contact </a>
                    </li>
                </ul>

                <div class="tab-content" style="max-width: 400px">
                    <div class="tab-pane container active" id="demo">
                        <partial name="/Views/Patients/Details/_Demo.cshtml" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>